#:kivy 2.1.0
<TimerGrid>
    BoxLayout:
		orientation: "vertical"
		size: root.width, root.height
        
        Label:
            height: self.parent.height / 3
            size_hint_y: None
            id:1
            text:'[b]DEEP WORK[/b] TIMER'
            markup: True
            font_size: self.height / 2.5
            font: 'Arial Black'

    
        GridLayout:
            cols: 3
            size_hint_y: None
            height: 50
    
            Button:
                id: btn_start
                background_color: 0.2, 0.31875, 0.2, 1
                on_press: root.start()
                Image:
                    source:"images/play_2.png"
                    y: self.parent.y + self.parent.height/2 - self.height/2
                    x: self.parent.x + self.parent.width/2
                    size: 40, 40
            Button:
                id: btn_stop
                background_color: 0.2, 0.31875, 0.2, 1
                on_press: root.stop()
                Image:
                    source:"images/pause_2.png"
                    y: self.parent.y + self.parent.height/2 - self.height/2
                    x: self.parent.x + self.parent.width/2
                    size: 40, 40
            Button:
                id: btn_reset
                background_color: 0.2, 0.31875, 0.2, 1
                on_press: root.reset()
                Image:
                    source:"images/restart.png"
                    y: self.parent.y + self.parent.height/2 - self.height/2
                    x: self.parent.x + self.parent.width/2
                    size: 40, 40

        Label:
            id: clock
            text: '0:00:00'
            font_size: (self.height + self.width) / 5
            font_name: 'digital-7/digital-7'
            background_color: "17022a"
        
    